  function criar_table_contatos(contatos){
      const table_contatos = `
        <h1>Contato Telefonicos</h1>

        <table class="table">
          <thead>
            <tr>
              <th>Telefone fixo</th>
              <th>Ramal</th>
              <th>Telefone celular</th>
              <th>Responsavel</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody id="tbody_table_contatos">

          </tbody>
        </table>

        <br>

        <a class="button is-info" href="/contato_telefonicos/new">Novo Contato Telefonico</a>

      `
      let corpo_table_contatos = '';

      contatos.forEach((contato) => {
          corpo_table_contatos = corpo_table_contatos + `
            <tr>
                <td>${contato.telefone_fixo}</td>
                <td>${contato.ramal}</td>
                <td>${contato.telefone_celular}</td>
                <td>${contato.responsavel}</td>
                <td><a  class="button is-primary" href="/contato_telefonicos/${contato.id}">Visualizar</a></td>
                <td><a class="button is-link" href="/contato_telefonicos/${contato.id}/edit">Editar</a></td>
                <td><a class="button is-danger" onclick="delete_element('/contato_telefonicos/${contato.id}')">Excluir</a></td>
              </tr>
          `
      });

      document.getElementById('conteudo').innerHTML = table_contatos;
      document.getElementById('tbody_table_contatos').innerHTML = corpo_table_contatos;
  }
</script>