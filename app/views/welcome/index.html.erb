      let corpo_table_clientes = '';

      clientes.forEach((cliente) => {
          corpo_table_clientes = corpo_table_clientes + `
          <tr>
                <td>${cliente.cnpj}</td>
                <td>${cliente.razao_social}</td>
                <td>${cliente.nome_fantasia}</td>
                <td>${cliente.inscricao_estadual}</td>
                <td>${cliente.inscricao_municipal}</td>
                <td>${cliente.endereco}</td>
                <td><a class="button is-primary" href="/clientes/${cliente.id}">Visualizar</a></td>
                <td><a class="button is-link" href="/clientes/${cliente.id}/edit">Editar</a></td>
                <td><a class="button is-danger" onclick="delete_element('/clientes/${cliente.id}')">Excluir</a></td>
