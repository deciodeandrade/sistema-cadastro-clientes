<script>

  function render_all(url){

    const getIndex = async () => {
        const response = await fetch(url, {
            method: 'GET',
            headers: { 'Content-Type': 'application/json' }
        })

        const data = await response.json();
        console.log(data.body);

        switch (url){
            case '/clientes':
                criar_table_clientes(data.body.clientes);
                break;
            case '/enderecos':
                criar_table_enderecos(data.body.enderecos);
                break;
            case '/responsavels':
                criar_table_responsaveis(data.body.responsavels);
                break;
            case '/contato_telefonicos':
                criar_table_contatos(data.body.contato_telefonicos);
                break;
        }
    }

    getIndex();

    return false;
  }

  function delete_element(url){
      const deleteItem = async () => {
          const response = await fetch(url, {
              method: 'delete',
              headers: { 'Content-Type': 'application/json' }
          })

          const data = await response.json();
          console.log(data.body);

          render_all(data.body.url);
          alert(data.message);
      }

      deleteItem();

      return false;
  }

  function show_welcome(){
      document.getElementById('conteudo').innerHTML = `<h1 id="bem_vindo">Bem-Vindo!</h1>`;
  }

  function criar_table_enderecos(enderecos){
      const table_enderecos = `
        <h1>Endereços</h1>

        <table class="table">
          <thead>
            <tr>
              <th>Logradouro</th>
              <th>Numero</th>
              <th>Complemento</th>
              <th>Bairro</th>
              <th>Cidade</th>
              <th>Estado</th>
              <th>Cep</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody id="tbody_table_enderecos">

          </tbody>
        </table>

        <br>

        <a class="button is-info" href="/enderecos/new">Novo Endereço</a>
      `
      let corpo_table_enderecos = '';

      enderecos.forEach((endereco) => {
          corpo_table_enderecos = corpo_table_enderecos + `
              <tr>
                <td>${endereco.logradouro}</td>
                <td>${endereco.numero}</td>
                <td>${endereco.complemento}</td>
                <td>${endereco.bairro}</td>
                <td>${endereco.cidade}</td>
                <td>${endereco.estado}</td>
                <td>${endereco.cep}</td>
                <td><a class="button is-primary" href="/enderecos/${endereco.id}">Visualizar</a></td>
                <td><a class="button is-link" href="/enderecos/${endereco.id}/edit">Editar</a></td>
                <td><a class="button is-danger" onclick="delete_element('/enderecos/${endereco.id}')">Excluir</a></td>
              </tr>
      `
      });

      document.getElementById('conteudo').innerHTML = table_enderecos;
      document.getElementById('tbody_table_enderecos').innerHTML = corpo_table_enderecos;
  }

